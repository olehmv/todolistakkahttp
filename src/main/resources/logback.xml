<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="slick.jdbc.JdbcBackend.statement" level="DEBUG"/>


  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>